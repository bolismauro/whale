extends layout

block content
  
  #pattern.page
    .page-container
      .page-text
        p.text-center.to-twocol
          img.logo(src='img/whale-logo.svg')
        p.text-center.to-twocol.to-alignleft
          small a random Avatar generator
          br
          | for everyone on the <b>Earth</b>!

        .spacer

        .container-fluid
          .row-fluid
            form.inline.span12#gowhale(action='#', method='post')
              fieldset.text-center
                div.input-append
                  input#mailaddress(type='email', name='email', placeholder='Insert your email address', required)
                  button.btn(type='submit')
                    span Sail the Sea!

        .bigspacer

        p.text-center.to-smaller
          span
            | Developer? 
            span.to-br
            a(href='https://github.com/plasticpanda/whale/wiki/whale.im-API', target='_blank') Whale API Docs
            |  are here!


  #result.page

    .page-container
      .page-text
        .page-bar
          .container-fluid
            .row-fluid
              .span12
                p.preview
                  img(src='')
                  input(value='', readonly, title='Click to select')

            .row-fluid.to-hide
              .span12.text-center
                ul.social-share
                  li
                    a(href='http://facebook.com')
                      img.social-button.social-facebook(src='img/social-facebook.svg', title='Share your new avatar on Facebook')
                  li
                    a(href='#')
                      img.social-button.social-twitter(src='img/social-twitter.svg', title='Share your new avatar on Twitter')

    img.footer(src='img/social-whales.svg', title='Bring more Whales to the party!')



